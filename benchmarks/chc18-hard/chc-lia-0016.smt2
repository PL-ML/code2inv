(set-logic ALL)
(declare-rel itp1 (Int))
(declare-rel itp2 (Int Int))
(declare-rel simple!!query ())
(declare-var A Int)
(declare-var B Int)
(declare-var C Int)
(rule (=> (and true (= A 0)) (itp1 A)))
(rule (=> (and (itp1 B) (not (<= 256 B)) (= A 0)) (itp2 B A)))
(rule (=> (and (itp2 B C) (not (<= 16 C)) (= A (+ 2 C))) (itp2 B A)))
(rule (=> (and (itp2 C B) (>= B 16) (= A (+ C B))) (itp1 A)))
(rule (=> (and (itp1 A) (>= A 256) (not (= A 256))) simple!!query))
(query simple!!query)
