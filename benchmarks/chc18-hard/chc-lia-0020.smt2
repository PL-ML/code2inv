(set-logic ALL)
(declare-rel FUN (Int Int))
(declare-rel simple!!query ())
(declare-rel SAD (Int Int))
(declare-var A Int)
(declare-var B Int)
(declare-var C Int)
(declare-var D Int)
(rule (=> (and (= A 0) (= B 0)) (FUN B A)))
(rule (=> (and (FUN D C) (= A (+ C B)) (= B (+ 1 D))) (FUN B A)))
(rule (=> (and (FUN D C) (= A (+ 1 C)) (not (<= D 0)) (= B D)) (SAD B A)))
(rule (let ((a!1 (= A (+ C (* (- 1) B)))))
(let ((a!2 (and (SAD D C) a!1 (not (<= C 0)) (= B (+ (- 1) D)))))
  (=> a!2 (SAD B A)))))
(rule (=> (and (SAD B A) (<= A 0) (<= 0 B)) simple!!query))
(query simple!!query)
